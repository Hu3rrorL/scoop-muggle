{
    "version": "0.2.6",
    "description": "Share content between Windows and iOS/Android",
    "homepage": "https://github.com/YanxinTang/clipboard-online",
    "license": "Unknown",
    "architecture": {
        "64bit": {
            "url": "https://github.com/YanxinTang/clipboard-online/releases/download/v0.2.6/clipboard-online.exe",
            "hash": "bec26c8f04ae826ce80888c9d2480a06d2ac9b3f0a62933121440531cf9260a2"
        }
    },
    "bin": "clipboard-online.exe",
    "pre_install": [
        "$config = \"$persist_dir\\config.json\"",
        "$log = \"$dir\\log.txt\"",
        "if (!(Test-Path $config)) {",
        "    @{",
        "         'port' = '8086'",
        "         'authkey' = ''",
        "         'logLevel' = 'warning'",
        "         'tempDir' = './temp'",
        "         'reserveHistory' = $false",
        "         'notify' = @{",
        "           'copy' = $false",
        "           'paste' = $false",
        "         }",
        "       } | ConvertToPrettyJson | Set-Content \"$dir\\config.json\" -Encoding Ascii",
        "}",
        "if (!(Test-Path $log)) { New-Item $log -Type File -Force | Out-Null }"
    ],
    "notes": "By default, config.json and tempDir are stored in '$persist_dir'.",
    "persist": [
        "config.json",
        "temp"
    ],
    "shortcuts": [
        [
            "clipboard-online.exe",
            "clipboard-online"
        ]
    ],
    "checkver": {
        "github": "https://github.com/YanxinTang/clipboard-online"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/YanxinTang/clipboard-online/releases/download/v$version/clipboard-online.exe"
            }
        }
    }
}
